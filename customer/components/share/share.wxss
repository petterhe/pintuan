/* 遮罩层 */

.lxp-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */

.lxp-modalDlg {
  width: 85%;
  position: fixed;
  top: 400rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lxp-topimage-view-close {
  width: 100%;
  height: 60rpx;
}

.lxp-topimage-view-closeimageview {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  float: right;
}

.lxp-topimage-view-closeimageview image {
  width: 35rpx;
  height: 35rpx;
}

/* 弹出层里面的图片 */

.lxp-topimage-view {
  display: flex;
  width: 100%;
  height: 220rpx;
  justify-content: center;
  /* margin-top: 60rpx; */
}

.lxp-topimage {
  width: 220rpx;
  height: 220rpx;
  /* border-radius: 110rpx; */
}

/* 弹出层里面的按钮 */

.lxp-bottom-button-view {
  width: 70%;
  display: flex;
  margin: 30rpx;
}

.lxp-ok {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  color: white;
  background-color: #ff1541;
  border-radius: 30rpx;
}

.lxp-ok::after {
  border: none;
}

.lxp-title {
  width: 80%;
  margin-top: 30rpx;
  color: red;
  font-size: 30rpx;
  text-align: center;
}

.lxp-title-black{
  color: #333;
  font-size: 30rpx;
}
