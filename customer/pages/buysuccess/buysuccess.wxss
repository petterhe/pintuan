  height: 1rpx;
  margin-bottom: 40rpx;
}

.buysuccess-message-view-headimage {
  width: 60rpx;
  height: 60rpx;
}

.buysuccess-message-view-headimage image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.buysuccess-message-view-name {
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 30rpx;
}
.buysuccess-message-view-headimage-pay{
  width: 154rpx;
  height: 124rpx;
  float: right;
  /* margin-right: 10rpx; */
}

.buysuccess-leftBtn { 
 margin-left:100rpx;
 float:left;
 color: #333;
}
.buysuccess-rightBtn { 
 margin-right:100rpx;
 float:right;
 color: red;
}
.buysuccess-rightBtn::after{
 border:1px solid red;
}

.button-common{
 width: 220rpx; 
 margin-top: 40rpx; 
 margin-bottom: 20rpx;
 height: 60rpx;
 line-height: 60rpx;
 background-color: white;
 font-size: 25rpx;
}
.buysuccess-message-view-button{
  display: flex;
  border-top: 1rpx solid #F1F1F1;
  /* border-bottom: 1rpx solid #F1F1F1; */
}

.buysuccess-message-tip{
  margin: 20rpx 40rpx;
  color: #999;
  font-size: 22rpx;
  text-align: center;
}
.buysuccess-message-warning{
  margin: 0rpx 40rpx;
  display: flex;
}
.buysuccess-message-imageview{
  width: 5%;
  display: flex;

}

.buysuccess-message-imageview image{
  margin-top: 6rpx;
