/* pages/buysuccess/buysuccess.wxss */

page{
  background-color: rgb(241, 241, 241);
}

.buysuccess-message-allview{
  background-color: white;
  margin-top: 0rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.buysuccess-message-view{
  background-color: #FFF6F8;
  border-radius: 14rpx;
  /* margin: 30rpx 30rpx 20rpx 30rpx; */
  margin: 40rpx 30rpx;
  overflow: hidden;
  padding: 20rpx 0;
}

.buysuccess-message-view-title{
  background-color: white;
  margin: 40rpx 80rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
}

.buysuccess-message-view-orderview{
  height: 144rpx;
  /* line-height: 144rpx; */
  font-size: 28rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #F1F1F1;
}
.buysuccess-message-view-ordertitle{
  font-size: 46rpx;
}

/* 购买记录 */
.buysuccess-message-view-topmessageview {
  margin: 20rpx 50rpx 20rpx 80rpx;
  display: flex;
  justify-content: space-between;
}

.buysuccess-message-view-lefthead-name{
  margin-top: 20rpx;
  display: flex;
}

.buysuccess-message-view-p
{
  margin-left: 160rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
  height: 130rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: #333;
}

.buysuccess-message-view-list {
  height: 50rpx;
  line-height: 50rpx;
} 
.buysuccess-productname{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
