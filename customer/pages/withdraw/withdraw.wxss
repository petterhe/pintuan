/* pages/withdraw/withdraw.wxss */

page {
  background-color: rgb(241, 241, 241);
}

.withdraw-bg-view {
  margin: 20rpx 20rpx 0 20rpx;
  height: 450rpx;
  background-color: white;
  border-radius: 20rpx;
}

.withdraw-top-view {
  margin: 0rpx 20rpx;
  height: 30%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgb(241, 241, 241);
}

.withdraw-top-view image {
  width: 50rpx;
  height: 50rpx;
}

.withdraw-top-view-titleview {
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 70%;
  /* background-color: blue; */
}

.withdraw-top-view-title {
  color: #333;
  font-size: 32rpx;
}

.withdraw-top-view-desc {
  color: #999;
  font-size: 26rpx;
}

.withdraw-center-view {
  margin: 0rpx 20rpx;
  height: 50%;
  /* background-color: purple; */
  border-bottom: 1rpx solid rgb(241, 241, 241);
}
.withdraw-center-view-top{
  color: #333;
  font-size: 32rpx;
  height: 40%;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.withdraw-center-view-bottom{
  height: 60%;
  /* background-color: lightcoral; */
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
  align-items: center;
}
.withdraw-center-view-bottom text{
  color: #333;
  font-size: 60rpx;
}
.withdraw-center-view-bottom input{
  margin-left: 20rpx;
  color: #333;
  font-size: 50rpx;
  /* background-color: purple; */
}
.withdraw-center-view-button{
  /* margin-left: 20rpx; */
  color: #ff1541;
  font-size: 32rpx;
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: white;
  /* margin-right: 0rpx; */
  padding-right: 0rpx;
  border-radius: 0;
}
.withdraw-center-view-button::after{
  border-radius: 0;
  border: none;
}

.withdraw-bottom-view {
  margin: 0rpx 20rpx;
  height: 20%;

  display: flex;
  justify-content: space-between;
  align-items: center;
}


.withdraw-bottombutton{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 90rpx 20rpx 40rpx 20rpx;
  color: white;
  background-color: #ff1541;
  border-radius: 40rpx;
}
.withdraw-bottombutton::after {
  border: none;
}

.withdraw-bottombutton-desc{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: gray;
  background-color: rgb(241, 241, 241);
}
.withdraw-bottombutton-desc::after{
  border: none;
}

.graycolor{
  color: gray;
}