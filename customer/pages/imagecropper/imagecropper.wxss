/* pages/imagecropper/imagecropper.wxss */
.top{
  position: absolute;
  width:100%;
  top:10rpx;
  display: flex;
  flex-flow:wrap;
  z-index: 10;
  color:white;
  justify-content:space-around;
}
.hint{
  position: absolute;
  top:10rpx;
  width:100%;
  font-size: 30rpx;
  text-align: center;
  color:white;
  z-index: 10;
}
page{
  background:rgb(14, 13, 13);
}
view{
  font-size: 30rpx;
}
.bottom{
  position: absolute;
  width:100%;
  bottom:0rpx;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;
  /* height: 210rpx; */
}
.bottom_ipx_view{
  position: absolute;
  width: 100%;
  height: 0rpx;
  bottom:0rpx;
  display: flex;
  z-index: 10;
  background-color: white;
}
.bottom_ipx_viewheight{
  height: 68rpx;
}
button{
  font-size:27rpx;
  z-index:2;
  height:80rpx;
  line-height: 80rpx;
  width:50%;
  border-radius: 0;
  background-color: white;
}
button::after{
  border: none;
  border-radius: 0;
}

.input{
  display: flex;
  height: 50rpx;
  width:50%;
}
.input>.label{
  min-width:150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.input>input{
  margin-left:10rpx;
  text-align: center;
  max-width:160rpx;
  border:1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}