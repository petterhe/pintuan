/* pages/order/orderproductlist.wxss */
page{
  background-color: #f1f1f1;
}
.content {
  display: flex;
  width: 750rpx;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f1f1f1;

}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top-con {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: white;
  border-bottom: 1px #f1f1f1 solid;
  font-size: 30rpx;
  color: #333;
}

.top_title_con {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.select {
  position: relative;
  color: #ff1541;
  /* background-color: yellow; */
}

.select:after {
  position: absolute;
  left: 38%;
  bottom: 0rpx;
  content: "";
  width: 24%;
  height: 6rpx;
  background-color: #ff1541;
  border-radius: 3rpx;
}
.top_title_txt 
{
  position: relative;
  bottom: 40rpx;
  height: 32rpx;
  flex-wrap: wrap;
  line-height: 32rpx;
  font-size: 30rpx;
  color: #333;
}

.product-title-container {
  height: 80rpx;
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.product-title-left {
  font-size: 28rpx;
  align-self: center;
  width: 15%;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-title-middle {
  font-size: 28rpx;
  align-self: center;
  width: 75%;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-title-right {
  font-size: 28rpx;
  align-self: center;
  width: 10%;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.product-content {
  margin: 0rpx 20rpx;
  display: flex;
  height: 68rpx;
  border-bottom: 1px #e2e2e2 solid;
}

.product-content-left {
  font-size: 26rpx;
  width: 15%;
  color: #666;
  align-self: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-content-middle {
  font-size: 26rpx;
  width: 75%;
  color: #666;
  align-self: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-content-right {
  font-size: 26rpx;
  width: 10%;
  align-self: center;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
.placeholder_view {
  position: fixed;
  z-index: 1;
  width: 100%;
  bottom: 0px;
  height: 68rpx;
  background-color: white;
}

/* 遮罩层 */

.lxp-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 日历 */

.box {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  display: block;
  /* margin: 20rpx; */
  font-size: 30rpx;
  background-color: white;
}

.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}

.item-content {
  text-align: center;
  background-color: white;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-day {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* background-color: yellow; */
  border-radius: 50%;
}

.bk-color-day {
  background-color: #ff1541;
  color: white;
}

.item-content-current-day {
  flex-grow: 2;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
}

.triangle-left {
  margin-right: 40rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #333;
  border-left: 2rpx solid #333;
  transform: rotate(45deg);
}

.triangle-right {
  margin-left: 40rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #333;
  border-right: 2rpx solid #333;
  transform: rotate(45deg);
}

